<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, autofocus: true, size: 40, required: true %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, size: 40, required: true %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
    <p>
      If you are not yet registered please <%= link_to "create an account here", signup_path %>
    </p>
  </fieldset>
<% end %>
