<%= form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.email_field :email, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :password %>
        <%= f.password_field :password, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, size: 40 %>
      </li>
    </ol>
    <% if @user.new_record? %>
      <p>
        <%= f.submit "Create Account" %> | <%= link_to 'Cancel', root_url %>
      </p>
    <% else %>
      <p>
        <%= f.submit "Update Account" %> | <%= link_to 'Cancel', user_path(@user) %>
      </p>
    <% end %>
  </fieldset>
<% end %>
